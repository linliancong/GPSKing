<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zxhl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/monitor_rl1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@color/bg_white"
        android:clickable="true"
        android:focusable="true"
        >


        <com.zxhl.util.ImgTxtLayout
            android:id="@+id/monitor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            zxhl:iconDrawable="@mipmap/cs_ic_back_blue"
            zxhl:iconDrawablePress="@mipmap/cs_ic_back_blue_press"
            zxhl:spacing="10dp"
            zxhl:style="iconLeft"
            zxhl:text="监控"
            zxhl:textSize="18"
            zxhl:textColor="@color/black"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/div_white"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/monitor_ly_sche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_pressed"
        android:visibility="gone"
        android:layout_below="@+id/monitor_rl1"
        >
        <ImageView
            android:id="@+id/monitor_img_sche"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/anima_await"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/monitor_rl1"
        android:background="@color/black_bg"
        >

        <LinearLayout
            android:id="@+id/monitor_ly1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/lock_edit"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/search_bar"
                />
            <AutoCompleteTextView
                android:id="@+id/monitor_vehicle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:hint="请输入机号"
                android:singleLine="true"
                android:dropDownVerticalOffset="10dp"
                android:dropDownHeight="200dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/monitor_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitor_ly1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="20dp"
            >
            <Button
                android:id="@+id/monitor_sc"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:text="锁车"
                android:textColor="@color/light_blue_500"
                android:background="@null"
                />
            <Button
                android:id="@+id/monitor_js"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:text="解锁"
                android:textColor="@color/light_blue_500"
                android:background="@null"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:id="@+id/monitor_ydkz"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:text="油电控制"
                android:textColor="@color/light_blue_500"
                android:background="@null"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/monitor_txt_veh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitor_ly2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="该功能可搜索车台，查看可执行的操作。试一试吧！"
            android:textSize="14sp"

            />

        <RelativeLayout
            android:id="@+id/monitor_rl_opc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitor_txt_veh"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            >
            <LinearLayout
                android:id="@+id/monitor_ly_jrjk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_back"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/jkms"
                    />
                <TextView
                    android:id="@+id/monitor_yjsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进入监控"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/monitor_ly_tcjk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_back"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@+id/monitor_ly_jrjk"
                android:layout_marginLeft="30dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/fjkms"
                    />
                <TextView
                    android:id="@+id/monitor_ejsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出监控"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/monitor_txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitor_rl_opc"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="下发 【XXX】 指令成功！"
            android:textSize="14sp"
            android:visibility="gone"
            />


    </RelativeLayout>



</RelativeLayout>